{
  "name": "enterprise-nx-monorepo",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": "23.6.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.8"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/apps/web-app/**/*.js",
      "maxSize": "300 kB"
    }
  ],
  "scripts": {
    "build": "nx run-many --target=build --all --parallel",
    "build:web-app": "nx build web-app",
    "build:fastify-api": "nx build fastify-api",
    "build:pages": "nx build-pages web-app",
    "test": "nx run-many --target=test --all",
    "test:web-app": "nx test web-app",
    "test:fastify-api": "nx test fastify-api",
    "test:integration": "vitest run apps/fastify-api/src/database.test.ts infrastructure/**/*.test.ts infrastructure/postgres/config.test.ts",
    "test:coverage": "nx run-many --target=test --all --coverage",
    "test:staged": "nx affected --target=test --uncommitted",
    "e2e": "nx e2e e2e",
    "dev": "nx serve web-app",
    "dev:ssr": "nx run-many --target=serve --projects=web-app,fastify-api --parallel",
    "dev:kafka": "pnpm run docker:up && sleep 5 && pnpm run dev:ssr",
    "start": "./scripts/start-with-kafka.sh",
    "clean": "nx reset && pnpm run docker:clean",
    "setup": "pnpm install && pnpm run docker:up && pnpm run validate:db-config",
    "docker": "docker-compose up -d",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "./scripts/dev-db-teardown.sh && docker-compose down -v --remove-orphans",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "lint:security": "eslint . --ext .js,.ts,.tsx --config .eslintrc.security.mjs --quiet || true",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "type-check": "nx run-many --target=type-check --all",
    "quality": "pnpm run lint && pnpm run format:check && pnpm run type-check",
    "sonar": "sonar-scanner",
    "sonar:coverage": "pnpm run test:coverage && sonar-scanner",
    "sonar:local": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.login=${SONAR_TOKEN}",
    "sonar:pr": "sonar-scanner -Dsonar.pullrequest.key=${PR_NUMBER} -Dsonar.pullrequest.branch=${PR_BRANCH} -Dsonar.pullrequest.base=${PR_BASE}",
    "security": "pnpm audit --audit-level moderate && pnpm run lint:security",
    "coverage:merge": "./scripts/merge-coverage.sh",
    "preview:pages": "pnpm run build:pages && nx preview web-app --port 4302",
    "validate:db-config": "node scripts/validate-db-config.mjs",
    "validate:infrastructure": "./infrastructure/validate.sh",
    "validate:k8s": "./k8s/validate.sh",
    "validate:all-infrastructure": "./scripts/validate-all-infrastructure.sh",
    "verify": "node scripts/verify-startup.mjs",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "graph": "nx graph",
    "reset": "nx reset",
    "nuke": "pnpm run clean && rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "health": "nx daemon --stop && nx daemon --start && nx show projects",
    "outdated": "pnpm outdated --recursive",
    "update:deps": "pnpm update --recursive --latest",
    "analyze": "pnpm run test:coverage && pnpm run lint && pnpm run sonar:coverage",
    "precommit": "pnpm run lint:fix && pnpm run format && pnpm run test:staged",
    "release": "pnpm run build && pnpm run test && pnpm run quality",
    "ci": "pnpm run lint && pnpm run type-check && pnpm run test:coverage && pnpm run build"
  },
  "private": true,
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.859.0",
    "@aws-sdk/client-ssm": "^3.859.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.1",
    "fastify": "^5.4.0",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "6.29.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@nx/devkit": "21.3.11",
    "@nx/esbuild": "^21.3.11",
    "@nx/eslint": "21.3.11",
    "@nx/eslint-plugin": "21.3.11",
    "@nx/js": "21.3.11",
    "@nx/node": "^21.3.11",
    "@nx/playwright": "21.3.11",
    "@nx/react": "21.3.11",
    "@nx/storybook": "^21.3.11",
    "@nx/vite": "21.3.11",
    "@nx/web": "21.3.11",
    "@nx/workspace": "21.3.11",
    "@playwright/test": "^1.54.2",
    "@swc-node/register": "~1.10.10",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.9",
    "@types/pg": "^8.15.5",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vanilla-extract/webpack-plugin": "^2.3.22",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "^2.2.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "jiti": "2.5.1",
    "jsdom": "~26.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.3.11",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "testcontainers": "^11.5.0",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.0.0",
    "vitest": "^3.2.4",
    "yaml": "^2.8.0"
  }
}
