# Environment Template - Copy to .env.local for local development
# Never commit .env.local to version control

# JWT Secret - Generate a new one for each environment
JWT_SECRET=generate-a-secure-jwt-secret-here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_PORT=3333
NODE_ENV=development

# AWS Configuration (optional for local development)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-development-access-key
# AWS_SECRET_ACCESS_KEY=your-development-secret-key

# Local development flags
USE_LOCAL_SECRETS=true
SKIP_AWS_SECRETS=true

# Optional: Override specific services
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=enterprise_db
# DATABASE_USER=enterprise
# DATABASE_PASSWORD=your-local-password

# Redis specific settings
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=optional-redis-password
