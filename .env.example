# Environment Template - Copy to .env for local development
# Never commit .env to version control

# Environment Configuration
NODE_ENV=development

# JWT Secret - Generate a new one for each environment
# Use: openssl rand -hex 64 or openssl rand -base64 64
# IMPORTANT: Use a long, random, cryptographically secure secret in production
JWT_SECRET=generate-a-secure-jwt-secret-here

# JWT Configuration
JWT_EXPIRES_IN=24h

# API Configuration
API_PORT=3334
VITE_API_URL=http://localhost:3334
LOG_LEVEL=info

# Database Configuration (for future use)
POSTGRES_PASSWORD=your-secure-db-password
DATABASE_URL=postgresql://enterprise:${POSTGRES_PASSWORD}@localhost:5432/enterprise_db

# Redis Configuration (for future use)
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:4200,http://localhost:4201

# AWS Configuration (optional for local development)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-development-access-key
# AWS_SECRET_ACCESS_KEY=your-development-secret-key

# Local development flags
USE_LOCAL_SECRETS=true
SKIP_AWS_SECRETS=true

# Optional: Override specific services
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=enterprise_db
# DATABASE_USER=enterprise
# DATABASE_PASSWORD=your-local-password

# Redis specific settings
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=optional-redis-password
