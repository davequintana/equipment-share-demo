{
  "name": "web-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "web-app",
  "sourceRoot": "apps/web-app/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/web-app",
        "configFile": "apps/web-app/vite.config.ts"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-app:build-server",
        "inspect": false
      },
      "configurations": {
        "development": {
          "args": ["--mode", "development"]
        },
        "production": {
          "args": ["--mode", "production"]
        }
      }
    },
    "build-server": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/web-app",
        "format": ["esm"],
        "bundle": true,
        "main": "apps/web-app/src/server/main.ts",
        "tsConfig": "apps/web-app/tsconfig.server.json",
        "external": ["vite", "fastify", "@fastify/static", "react", "react-dom", "react-router-dom"],
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/web-app/src/assets",
            "output": "assets"
          },
          {
            "glob": "**/*",
            "input": "apps/web-app/public",
            "output": "."
          },
          {
            "glob": "index.html",
            "input": "apps/web-app",
            "output": "."
          }
        ],
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "esbuildOptions": {
            "sourcemap": false,
            "outExtension": {
              ".js": ".js"
            }
          }
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/apps/web-app"
      }
    }
  }
}
